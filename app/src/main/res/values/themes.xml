<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMall" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EE0000</item>
        <item name="colorPrimaryVariant">#EA0000</item>
        <item name="colorOnPrimary">@color/Read</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Splashscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Read</item>
        <item name="colorPrimaryVariant">#F80303</item>
        <item name="colorOnPrimary">#E91E63</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#F80303</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_activity_background</item>
        <item name="background">@color/Read</item>
    </style>


    <style name="Redprograssber" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Read</item>
        <item name="colorPrimaryDark">#F80303</item>
        <item name="colorAccent">@color/Read</item>
    </style>

    <style name="Theme.MyMall.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyMall.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyMall.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>